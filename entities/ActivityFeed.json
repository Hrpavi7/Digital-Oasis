    },
    "item_name": {
      "type": "string",
      "description": "Name of file/folder affected"
    },
    "item_id": {
      "type": "string",
      "description": "ID of the shared item"
    },
    "description": {
      "type": "string",
      "description": "Description of the action"
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata about the action"
    }
  },
  "required": []
}
