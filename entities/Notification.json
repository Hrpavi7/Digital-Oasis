{
  "name": "Notification",
  "type": "object",
  "properties": {
    "recipient_email": {
      "type": "string",
      "description": "Email of notification recipient"
    },
    "notification_type": {
      "type": "string",
      "enum": ["collaboration", "challenge", "achievement", "system"],
      "description": "Type of notification"
    },
    "title": {
      "type": "string",
      "description": "Notification title"
    },
    "message": {
      "type": "string",
      "description": "Notification message"
    },
    "related_id": {
      "type": "string",
      "description": "ID of related item"
    },
    "is_read": {
      "type": "boolean",
      "default": false,
      "description": "Whether notification is read"
    },
    "priority": {
      "type": "string",
      "enum": ["low", "normal", "high"],
      "default": "normal",
      "description": "Notification priority"
    }
  },
  "required": []
}
